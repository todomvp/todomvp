button {
  background: none;
  font-size: 30rpx;
  color: #777;
}

button:after {
  border: none;
}

.todo-count {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}

.ib {
  display: inline-block;
}

.footer {
  height: 100rpx;
  line-height: 66rpx;
  width: 100%;
  font-size: 30rpx;
  position: relative;
  background-color: rgb(247, 247, 247);
  color: #777;
}

.clear-completed {
  position: absolute;
  top: 16rpx;
  right: 0rpx;
